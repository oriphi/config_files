zshrcRefresh() {
	# $1 = $?
	# $2 print text
	source /home/pierre/.zshrc
	if [ "$?" -eq "0" ];
	then
		echo -e "\e[1;32m .zshrc reloaded"
	else
		echo -e "\e[1;31m Error while refreshing .zshrc"
	fi

}


