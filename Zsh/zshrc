# Auto Completion
PROMPT2="> "

if [[ "$TERM" == "linux" ]];
then
	PROMPT="%B%F{yellow}(%F{green}%n %F{red}[%F{blue}%T%F{red}] [%F{blue}%~%F{red}] Z%F{yellow})"$'\n'" > %f%b"
	setfont ter-v22n
	ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=magenta"
else
	autoload -Uz compinit
	compinit
	#zstyle ':completion:*' menu select
	ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#a0a0a0"

	PROMPT="%B%F{yellow}(%F{green}%n %F{red}[%F{blue}%T%F{red}] [%F{blue}%~%F{red}] %F{6} Z%F{yellow})"$'\n'"  %F{magenta}â—‰ %f%b"
fi
